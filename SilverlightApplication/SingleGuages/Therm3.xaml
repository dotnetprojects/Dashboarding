<UserControl x:Class="SilverlightApplication.SingleGuages.Therm3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
 xmlns:db="clr-namespace:Codeplex.Dashboarding;assembly=Codeplex.Dashboarding" 
    Width="160" Height="136">
    <Grid x:Name="LayoutRoot" >
        <StackPanel Orientation="Horizontal">
<db:PlainThermometer ValueTextVisibility="Collapsed" ValueTextColor="Aquamarine" Value="55">
    <db:PlainThermometer.MercuryColorRange>
        <db:ColorPoint HiColor="#009900" LowColor="#44DD00" Value="0" />
    </db:PlainThermometer.MercuryColorRange>
</db:PlainThermometer>


            

        </StackPanel>

    </Grid>
</UserControl>
