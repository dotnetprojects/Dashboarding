<UserControl x:Class="SilverlightApplication.SingleGuages.SeventhStep"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
     xmlns:db="clr-namespace:Codeplex.Dashboarding;assembly=Codeplex.Dashboarding"             
             Width="200" Height="100" >
    <Grid x:Name="LayoutRoot" >
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <db:FiveStarRanking Value="{Binding MilesPerHour, Mode=TwoWay}" IsBidirectional="True"/>
            <Slider Minimum="0" Maximum="100" Value="{Binding MilesPerHour, Mode=TwoWay}" Width="100" VerticalAlignment="Top" ></Slider>
        </StackPanel>


    </Grid>
</UserControl>
