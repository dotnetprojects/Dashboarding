<UserControl x:Class="SilverlightApplication.SingleGuages.Odd5"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
              xmlns:db="clr-namespace:Codeplex.Dashboarding;assembly=Codeplex.Dashboarding"   
   >
    <Grid x:Name="LayoutRoot" >
        <StackPanel Orientation="Horizontal">
            <Button x:Name="up" Width="25" Content="^" Click="up_Click" />
            <db:Odometer x:Name="_od" Digits="3" MeterMode="Static" />
            <Button x:Name="down" Width="25" Content="v" Click="down_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
