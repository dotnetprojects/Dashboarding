<UserControl x:Class="SilverlightApplication.SingleGuages.Wall3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
 xmlns:db="clr-namespace:Codeplex.Dashboarding;assembly=Codeplex.Dashboarding" 
    Width="50" Height="144">
    <Grid x:Name="LayoutRoot" >
        <db:WallThermometer Value="50" ValueTextVisibility="Collapsed" >
            <db:WallThermometer.MercuryColorRange>
                <db:ColorPoint HiColor="#009900" LowColor="#44DD00" Value="0" />
            </db:WallThermometer.MercuryColorRange>
        </db:WallThermometer>
    </Grid>
</UserControl>
