<UserControl x:Class="SilverlightApplication.SingleGuages.Dial180_1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:db="clr-namespace:Codeplex.Dashboarding;assembly=Codeplex.Dashboarding"
             
    >
    <Grid x:Name="LayoutRoot" >
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <db:Dial180North Value="32" />
                <db:Dial180South Value="32"  Margin="0,4,0,0"/>
            </StackPanel>
            <db:Dial180West Value="32"  Margin="4,0,0,0" />
            <db:Dial180East Value="32"  Margin="4,0,0,0" />

            <StackPanel Orientation="Vertical">
                <db:Dial90NorthWest Value="32"  />
                <db:Dial90SouthWest Value="32" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <db:Dial90NorthEast Value="32"  />
                <db:Dial90SouthEast Value="32" />
            </StackPanel>

            <db:Dial360  Value="32" />
            <db:Knob360  Value="32" />
        </StackPanel>
    </Grid>
</UserControl>
