<UserControl x:Class="SilverlightApplication.SingleGuages.Mat5"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:db="clr-namespace:Codeplex.Dashboarding;assembly=Codeplex.Dashboarding"
    Width="270" Height="200">
    <Grid x:Name="LayoutRoot" >
        
        <StackPanel Orientation="Vertical">
<db:MatrixLedMarquee  
    Panels="10" 
    Mode="Motionless"
    TextAlignment="Left"
    Text="lft"
    />
            <Rectangle Height="10" />

            <db:MatrixLedMarquee  
    Panels="10" 
    Mode="Motionless"
    TextAlignment="Right"
    Text="rgt"
    />

            <Rectangle Height="10" />

            <db:MatrixLedMarquee 
    Text="cent"  
    Panels="10" 
    Mode="Motionless"   
    TextAlignment="Center"
/>

        </StackPanel>
    </Grid>
        
        
        
</UserControl>

